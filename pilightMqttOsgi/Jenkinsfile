pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                sh 'mvn --version'
                sh 'cd pilightMqttOsgi;mvn clean install'
            }
        }
        stage('Deploy') {
            environment {
                BITBUCKET_COMMON_CREDS = credentials('pi_rpi3')
            }
            steps {
                sh 'cd pilightMqttOsgi;sshpass -p ${pi_rpi3_PSW} rsync target/pilightMqttOsgi-1.0-SNAPSHOT.jar pi@rpi3:/usr/share/karaf/deploy'
            }
        }
    }
}

