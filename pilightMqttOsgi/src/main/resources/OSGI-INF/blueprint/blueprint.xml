            <to uri="direct:SetHeaders"/>
            <setBody>
                <simple>
                    "Light_GF_Huiskamer_Achterdeur_Schemerlamp=${in.header.Light_GF_Huiskamer_Achterdeur_Schemerlamp})
                </simple>
            </setBody>
            <to uri="log:nl.vandenzen.pilightmqttosgi?level=INFO"/>
            <choice>
                <when>
                    <groovy>
                        request.headers.get('pir_gf_achterdeur17')
                        &amp;&amp;
                        request.headers.get('LichtIntensiteit_Woonkamer')&lt;request.headers.get('LightsOnIntensityThreshold')
                        &amp;&amp;
                        request.headers.get('LampAchterdeur_Brightness')&lt;1 // licht is uit
                    </groovy>
                    <setBody>
